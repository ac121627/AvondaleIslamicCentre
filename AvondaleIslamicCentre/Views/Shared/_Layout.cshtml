<!DOCTYPE html>
<html lang="en">
@using Microsoft.AspNetCore.Identity
@using AvondaleIslamicCentre.Areas.Identity.Data

@inject SignInManager<AICUser> SignInManager
@inject UserManager<AICUser> UserManager
<head>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Avondale Islamic Centre</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/AvondaleIslamicCentre.styles.css" asp-append-version="true" />

    <style>
        body {
            background-color: #deffe0
        }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">

                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                    <img src="~/Images/AIC logo.png" width="110" height="80" class="d-inline-block align-text-top" asp-append-version="true" />
                </a>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        
                        @if (SignInManager.IsSignedIn(User))
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Halls" asp-action="Index">Halls</a>
                            </li>
                            @* Show Student link only to Admins *@
                            @if (User.IsInRole("Admin"))
                            {
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-area="" asp-controller="Students" asp-action="Index">Students</a>
                                </li>
                            }
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Teachers" asp-action="Index">Teachers</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Classes" asp-action="Index">Classes</a>
                            </li>
                        }
                        <li>
                            <a class="nav-link text-dark" asp-area="" asp-controller="Bookings" asp-action="Index">Bookings</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Donations" asp-action="Index">Donate</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Notices" asp-action="Index">Notices</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="About">About</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Gallery">Gallery</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                        </li>
                    </ul>
                    <style>
                        .navbar {
                            background-color: #f0fff4 !important; 
                            border-bottom: 2px solid #2d7034;
                        }

                            .navbar .nav-link {
                                color: #2d7034 !important; 
                                font-weight: 500;
                                padding: 0.6rem 1.2rem;
                                border-radius: 6px;
                                position: relative;
                                transition: all 0.3s ease-in-out;
                            }

                                .navbar .nav-link::after {
                                    content: "";
                                    position: absolute;
                                    bottom: -4px;
                                    left: 50%;
                                    transform: translateX(-50%) scaleX(0);
                                    width: 70%;
                                    height: 3px;
                                    background-color: #2d7034;
                                    border-radius: 2px;
                                    transition: transform 0.3s ease-in-out;
                                }

                                .navbar .nav-link:hover {
                                    color: #ffffff !important;
                                    background-color: #2d7034; 
                                    transform: translateY(-2px);
                                    box-shadow: 0 3px 10px rgba(0, 0, 0, 0.15);
                                }

                                    .navbar .nav-link:hover::after {
                                        transform: translateX(-50%) scaleX(1);
                                    }

                                /* Active link */
                                .navbar .nav-link.active {
                                    background-color: #2d7034;
                                    color: #ffffff !important;
                                    font-weight: 600;
                                }

                        .navbar-brand img {
                            transition: transform 0.3s ease;
                        }

                            .navbar-brand img:hover {
                                transform: scale(1.05);
                            }
                    </style>
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>
    
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="text-white mt-5" style="background: linear-gradient(135deg, #2d7034, #3BFF48);">
        <div class="container py-4">
            <div class="row">

                <!-- Column 1: Logo + Tagline -->
                <div class="col-md-4 mb-3">
                    <h5 class="fw-bold">Avondale Islamic Centre</h5>
                    <p style="font-size: 0.9rem;">Serving the spiritual and educational needs of the community with excellence and compassion.</p>
                </div>

                <!-- Column 2: Quick Links -->
                <div class="col-md-4 mb-3">
                    <h6>Quick Links</h6>
                    <ul class="list-unstyled">
                        <li><a asp-area="" asp-controller="Home" asp-action="Index" class="text-white text-decoration-none">Home</a></li>
                        <li><a asp-area="" asp-controller="Home" asp-action="Privacy" class="text-white text-decoration-none">Privacy Policy</a></li>
                        <li><a href="mailto:ac121627@avcol.school.nz" class="text-white text-decoration-none">Contact Us</a></li>
                    </ul>
                </div>

                <!-- Column 3: Social Media -->
                <div class="col-md-4 mb-3 text-md-end">
                    <h6>Connect With Us</h6>
                    <a href="https://www.facebook.com/Avondale.IC/" target="_blank" class="btn btn-outline-light facebook-btn d-inline-flex align-items-center gap-2">
                        <i class="bi bi-facebook" style="font-size: 1.2rem;"></i> Facebook
                    </a>
                </div>

            </div>

            <hr class="border-light" />
            <div class="text-center" style="font-size: 0.9rem;">
                &copy; 2025 Avondale Islamic Centre. All rights reserved.
            </div>
        </div>

        <style>
            .facebook-btn {
                background-color: aliceblue;
                transition: background-color 0.3s ease, transform 0.2s ease;
            }

                .facebook-btn:hover {
                    background-color: #1877f2;
                    transform: scale(1.05);
                    color: white;
                }
        </style>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
