@model AvondaleIslamicCentre.Models.Hall

@{
    ViewData["Title"] = "Edit Hall";
}

<div class="container mt-4 animate-up">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card shadow-sm border-0">
                <div class="card-header text-center py-3">
                    <h4 class="mb-0 text-white">Edit Hall</h4>
                </div>
                <div class="card-body p-4">
                    <form asp-action="Edit">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                        <input type="hidden" asp-for="HallId" />

                        <div class="mb-3">
                            <label asp-for="Name" class="form-label fw-bold"></label>
                            <input asp-for="Name" class="form-control rounded-pill" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Capacity" class="form-label fw-bold"></label>
                            <input asp-for="Capacity" class="form-control rounded-pill" />
                            <span asp-validation-for="Capacity" class="text-danger"></span>
                        </div>

                        <div class="form-group mt-4 text-center">
                            <button type="submit" class="btn btn-edit rounded-pill px-4 py-2">Save Changes</button>
                            <a asp-action="Index" class="btn btn-outline-secondary rounded-pill px-4 py-2 ms-2">Back to List</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
