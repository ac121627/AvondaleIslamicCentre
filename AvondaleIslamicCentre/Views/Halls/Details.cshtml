@model AvondaleIslamicCentre.Models.Hall

@{
    ViewData["Title"] = "Details";
}

<div class="detail-card animate-up">
    <div class="detail-header d-flex align-items-center gap-3">
        <h3 class="mb-0">Hall Details</h3>
    </div>
    <div class="detail-body">
        <div>
            <div class="detail-row"><div class="detail-key">Name</div><div class="detail-val">@Html.DisplayFor(m => m.Name)</div></div>
            <div class="detail-row"><div class="detail-key">Capacity</div><div class="detail-val">@Html.DisplayFor(m => m.Capacity)</div></div>
            <div class="mt-3 text-end">
                <a asp-action="Edit" asp-route-id="@Model?.HallId" class="btn btn-edit" data-icon="bi-pencil">Edit</a>
                <a asp-action="Index" class="btn btn-secondary ms-2" data-icon="bi-arrow-left">Back to List</a>
            </div>
        </div>
    </div>
</div>
