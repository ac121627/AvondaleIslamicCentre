@model AvondaleIslamicCentre.Models.Teacher

@{
    ViewData["Title"] = "Details";
}

<div class="detail-card animate-up">
    <div class="detail-header">
        <h3>Teacher Details</h3>
    </div>
    <div class="detail-body">
        <div class="detail-row"><div class="detail-key">First Name</div><div class="detail-val">@Html.DisplayFor(m => m.FirstName)</div></div>
        <div class="detail-row"><div class="detail-key">Last Name</div><div class="detail-val">@Html.DisplayFor(m => m.LastName)</div></div>
        <div class="detail-row"><div class="detail-key">Email</div><div class="detail-val">@Html.DisplayFor(m => m.Email)</div></div>
        <div class="detail-row"><div class="detail-key">Phone</div><div class="detail-val">@Html.DisplayFor(m => m.PhoneNumber)</div></div>

        <div class="mt-3 text-end">
            @if (User.IsInRole("Admin"))
            {
                <a asp-action="Edit" asp-route-id="@Model?.TeacherId" class="btn btn-edit" data-icon="bi-pencil">Edit</a>
            }
            <a asp-action="Index" class="btn btn-secondary ms-2" data-icon="bi-arrow-left">Back to List</a>
        </div>
    </div>
</div>
