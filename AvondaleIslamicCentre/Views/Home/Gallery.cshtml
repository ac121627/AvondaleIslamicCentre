@model IEnumerable<string>
@{
    ViewData["Title"] = "Gallery";
}

<div class="container mt-4 animate-up">
    <div class="row mb-3">
        <div class="col-12">
            <h1 class="page-title">Gallery</h1>
            <p class="page-subtitle">A visual tour of our centre and community</p>
        </div>
    </div>

    @if (!Model.Any())
    {
        <div class="alert alert-light">No images found in the Images folder.</div>
    }
    else
    {
        <div class="row g-3">
            @foreach (var img in Model)
            {
                <div class="col-6 col-md-4 col-lg-3">
                    <div class="card border-0 shadow-sm gallery-card">
                        <a href="@img" data-bs-toggle="modal" data-bs-target="#galleryModal" data-bs-img="@img">
                            <img src="@img" class="card-img-top img-fluid rounded" alt="Gallery image" style="height:180px; object-fit:cover;" />
                        </a>
                    </div>
                </div>
            }
        </div>
    }
</div>
