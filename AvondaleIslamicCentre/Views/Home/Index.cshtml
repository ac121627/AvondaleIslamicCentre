@{
    ViewData["Title"] = "Home Page";
}

<!-- Hero Section -->
<div class="text-center text-white py-5" style="background-color: #28a745;">
    <h1 class="display-4 fw-bold">Welcome to Avondale Islamic Centre</h1>
    <p class="lead mx-auto" style="max-width: 700px;">
        The Avondale Islamic Centre is dedicated to serving the spiritual, educational, and social needs of the local Muslim community.
        We offer daily prayers, Quran and Islamic studies classes, community events, and support services for all ages.
    </p>
</div>

<hr class="my-4" style="border-color: #28a745; width: 100%;" />

<div id="mosqueCarousel" class="carousel slide mb-5" data-bs-ride="carousel">
    <div class="carousel-inner">

        <div class="carousel-item active">
            <img src="~/Images/Entrance 1.jpg" class="d-block w-100 rounded shadow-sm" alt="Mosque Photo 1">
        </div>

        <div class="carousel-item">
            <img src="~/Images/Mens Main 10.jpg" class="d-block w-100 rounded shadow-sm" alt="Mosque Photo 2">
        </div>

        <div class="carousel-item">
            <img src="~/Images/Mens Back 4.jpg" class="d-block w-100 rounded shadow-sm" alt="Mosque Photo 3">
        </div>

        <!-- Add more carousel items as needed -->

    </div>

    <!-- Carousel controls -->
    <button class="carousel-control-prev" type="button" data-bs-target="#mosqueCarousel" data-bs-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Previous</span>
    </button>

    <button class="carousel-control-next" type="button" data-bs-target="#mosqueCarousel" data-bs-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Next</span>
    </button>
</div>


<!-- Mission Section -->
<div class="text-center py-5 px-3" style="background-color: #F3FFF0;">
    <h2 class="text-success mb-4">Our Mission</h2>
    <p class="text-dark mx-auto" style="max-width: 800px;">
        Our mission is to build a strong, united, and informed Muslim community by following the teachings of the Quran and the Sunnah of the Prophet Muhammad (peace be upon him).
        We invite you to explore our site to stay up-to-date with prayer times, class schedules, events, and more.
    </p>
</div>

<!-- Quick Links Section -->
<div class="container py-5">
    <div class="row text-center">
        <div class="col-md-4 mb-4">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body">
                    <i class="bi bi-clock-history display-4 text-success mb-3"></i>
                    <h5 class="card-title">Prayer Timetables</h5>
                    <p class="card-text">Stay updated with accurate daily prayer timings for your convenience.</p>
                    <a href="#" class="btn btn-outline-success">View Timetable</a>
                </div>
            </div>
        </div>
        <div class="col-md-4 mb-4">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body">
                    <i class="bi bi-building display-4 text-success mb-3"></i>
                    <h5 class="card-title">Book a Hall</h5>
                    <p class="card-text">Book our multipurpose halls for weddings, lectures, or events.</p>
                    <a href="/Bookings" class="btn btn-outline-success">Make a Booking</a>
                </div>
            </div>
        </div>
        <div class="col-md-4 mb-4">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body">
                    <i class="bi bi-cash-coin display-4 text-success mb-3"></i>
                    <h5 class="card-title">Make a Donation</h5>
                    <p class="card-text">Support the Centre by donating to our mosque and community projects.</p>
                    <a href="/Donations" class="btn btn-outline-success">Donate Now</a>
                </div>
            </div>
        </div>
    </div>
</div>
