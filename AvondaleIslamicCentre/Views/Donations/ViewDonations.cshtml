@using AvondaleIslamicCentre.Models
@model PaginatedList<Donation>

@{
    ViewData["Title"] = "Index";
    var currentSort = (string)ViewData["CurrentSort"] ?? "";
    var currentFilter = (string)ViewData["CurrentFilter"] ?? "";
}

<h1>Donations</h1>

<p>
    @if (User.IsInRole("Admin") || User.IsInRole("Member"))
    {
        <a asp-action="Create" class="btn btn-create">Make A New Donation</a>
    }
</p>

<form method="get" class="mb-3">
    <input type="text" name="searchString" value="@currentFilter" placeholder="Search by donor or description..." class="form-control d-inline-block w-auto me-2" />
    <input type="hidden" name="sortOrder" value="@currentSort" />
    <button type="submit" class="btn btn-secondary">Search</button>
</form>

<table class="table">
    <thead>
        <tr>
            <th>
                <a asp-action="Index" asp-route-sortOrder="@(ViewData["AmountSortParm"])" asp-route-searchString="@currentFilter">@Html.DisplayNameFor(model => model[0].Amount)</a>
            </th>
            <th>
                <a asp-action="Index" asp-route-sortOrder="@(ViewData["DateSortParm"])" asp-route-searchString="@currentFilter">@Html.DisplayNameFor(model => model[0].DateDonated)</a>
            </th>
            <th>
                @Html.DisplayNameFor(model => model[0].DonorName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model[0].DonationType)
            </th>
            <th>
                @Html.DisplayNameFor(model => model[0].PaymentMethod)
            </th>
            <th>
                @Html.DisplayNameFor(model => model[0].Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model[0].AICUser)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Amount)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DateDonated)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DonorName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DonationType)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PaymentMethod)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.AICUser.Id)
                </td>
                <td>
                    @if (User.IsInRole("Admin"))
                    {
                        <a asp-action="Edit" asp-route-id="@item.DonationId" class="btn btn-edit btn-sm">Edit</a>
                        <a asp-action="Details" asp-route-id="@item.DonationId" class="btn btn-details btn-sm ms-1">Details</a>
                        <a asp-action="Delete" asp-route-id="@item.DonationId" class="btn btn-delete btn-sm ms-1">Delete</a>
                    }
                    else if (User.IsInRole("Member"))
                    {
                        <a asp-action="Details" asp-route-id="@item.DonationId" class="btn btn-details btn-sm">Details</a>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>

<nav aria-label="Page navigation">
    <ul class="pagination">
        <li class="page-item @(Model.HasPreviousPage ? "" : "disabled")">
            <a class="page-link" asp-action="Index" asp-route-pageNumber="@(Model.PageIndex - 1)" asp-route-sortOrder="@currentSort" asp-route-searchString="@currentFilter">Previous</a>
        </li>
        @for (int i = 1; i <= Model.TotalPages; i++)
        {
            <li class="page-item @(i == Model.PageIndex ? "active" : "")">
                <a class="page-link" asp-action="Index" asp-route-pageNumber="@i" asp-route-sortOrder="@currentSort" asp-route-searchString="@currentFilter">@i</a>
            </li>
        }
        <li class="page-item @(Model.HasNextPage ? "" : "disabled")">
            <a class="page-link" asp-action="Index" asp-route-pageNumber="@(Model.PageIndex + 1)" asp-route-sortOrder="@currentSort" asp-route-searchString="@currentFilter">Next</a>
        </li>
    </ul>
</nav>
