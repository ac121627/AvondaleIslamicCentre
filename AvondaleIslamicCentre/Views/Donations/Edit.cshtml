@model AvondaleIslamicCentre.Models.Donation

@{
    ViewData["Title"] = "Edit Donation";
}

<div class="container mt-4 animate-up">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card shadow-sm border-0">
                <div class="card-header text-center py-3">
                    <h4 class="mb-0 text-white">Edit Donation</h4>
                </div>
                <div class="card-body p-4">
                    <form asp-action="Edit" method="post">
                        @Html.AntiForgeryToken()
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
                        <input type="hidden" asp-for="DonationId" />

                        <div class="mb-3">
                            <label asp-for="Amount" class="form-label fw-bold"></label>
                            <input asp-for="Amount" type="number" class="form-control rounded-pill" min="0.01" max="1000" step="0.01" />
                            <span asp-validation-for="Amount" class="text-danger"></span>
                        </div>

                        <div class="row g-2">
                            <div class="col-md-6 mb-3">
                                <label asp-for="DonationType" class="form-label fw-bold"></label>
                                <select asp-for="DonationType" class="form-select rounded-pill" asp-items="Html.GetEnumSelectList<DonationType>()"></select>
                                <span asp-validation-for="DonationType" class="text-danger"></span>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="PaymentMethod" class="form-label fw-bold"></label>
                                <select asp-for="PaymentMethod" class="form-select rounded-pill" asp-items="Html.GetEnumSelectList<PaymentMethod>()"></select>
                                <span asp-validation-for="PaymentMethod" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Description" class="form-label fw-bold"></label>
                            <textarea asp-for="Description" class="form-control rounded" rows="3"></textarea>
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label>Date Donated</label>
                            <input type="text" class="form-control" value="@Model.DateDonated.ToString("g")" disabled />
                        </div>

                        <div class="mb-3">
                            <label>Donated By</label>
                            <input type="text" class="form-control" value="@ViewBag.DonationOwnerFirstName" disabled />
                            <input type="hidden" name="AICUserId" value="@ViewBag.DonationOwnerId" />
                        </div>

                        <div class="form-group mt-4 text-center">
                            <button type="submit" class="btn btn-edit rounded-pill px-4 py-2">Save Changes</button>
                            <a asp-action="Index" class="btn btn-outline-secondary rounded-pill px-4 py-2 ms-2">Back to List</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
