@model AvondaleIslamicCentre.Models.Donation

@{
    ViewData["Title"] = "Delete";
}

<div class="detail-card animate-up">
    <div class="detail-header">
        <h3>Delete Donation</h3>
        <p class="small">Are you sure you want to delete this?</p>
    </div>
    <div class="detail-body">
        <div class="detail-row"><div class="detail-key">Amount</div><div class="detail-val">@Html.DisplayFor(m => m.Amount)</div></div>
        <div class="detail-row"><div class="detail-key">Date</div><div class="detail-val">@Html.DisplayFor(m => m.DateDonated)</div></div>
        <div class="detail-row"><div class="detail-key">Type</div><div class="detail-val">@Html.DisplayFor(m => m.DonationType)</div></div>
        <div class="detail-row"><div class="detail-key">Payment</div><div class="detail-val">@Html.DisplayFor(m => m.PaymentMethod)</div></div>
        <div class="detail-row"><div class="detail-key">Description</div><div class="detail-val">@Html.DisplayFor(m => m.Description)</div></div>
        <div class="detail-row"><div class="detail-key">Donor</div><div class="detail-val">@Html.DisplayFor(m => m.AICUser.FirstName)</div></div>

        <form asp-action="Delete" class="mt-3 text-end">
            <input type="hidden" asp-for="DonationId" />
            <button type="submit" class="btn btn-delete" data-icon="bi-trash">Delete</button>
            <a asp-action="Index" class="btn btn-secondary ms-2" data-icon="bi-arrow-left">Back to List</a>
        </form>
    </div>
</div>
