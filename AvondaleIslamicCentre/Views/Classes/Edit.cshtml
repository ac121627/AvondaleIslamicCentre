@model AvondaleIslamicCentre.Models.Class

@{
    ViewData["Title"] = "Edit Class";
}

<div class="container mt-4 animate-up">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card shadow-sm border-0">
                <div class="card-header text-center py-3">
                    <h4 class="mb-0 text-white">Edit Class</h4>
                </div>
                <div class="card-body p-4">
                    <form asp-action="Edit">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                        <input type="hidden" asp-for="ClassId" />

                        <div class="mb-3">
                            <label asp-for="ClassName" class="form-label fw-bold"></label>
                            <input asp-for="ClassName" class="form-control rounded-pill" />
                            <span asp-validation-for="ClassName" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Description" class="form-label fw-bold"></label>
                            <textarea asp-for="Description" class="form-control rounded" rows="3"></textarea>
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="CurrentStudents" class="form-label fw-bold"></label>
                                <input asp-for="CurrentStudents" class="form-control rounded-pill" />
                                <span asp-validation-for="CurrentStudents" class="text-danger"></span>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="TeacherId" class="form-label fw-bold"></label>
                                <select asp-for="TeacherId" class="form-select rounded-pill" asp-items="ViewBag.TeacherId"></select>
                                <span asp-validation-for="TeacherId" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="form-group mt-4 text-center">
                            <button type="submit" class="btn btn-edit rounded-pill px-4 py-2">Save Changes</button>
                            <a asp-action="Index" class="btn btn-outline-secondary rounded-pill px-4 py-2 ms-2">Back to List</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
