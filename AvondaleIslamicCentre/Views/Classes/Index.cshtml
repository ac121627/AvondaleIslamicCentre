@using AvondaleIslamicCentre.Models
@model PaginatedList<Class>

@{
    ViewData["Title"] = "Classes";
    var currentSort = (string)ViewData["CurrentSort"] ?? "";
    var currentFilter = (string)ViewData["CurrentFilter"] ?? "";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <div>
        <h1 class="page-title">Classes</h1>
        <small class="page-subtitle">Manage all available classes</small>
    </div>

    <div class="d-flex align-items-center">
        <form method="get" class="search-wrapper mb-0">
            <div class="input-group search-input">
                <input type="text" name="searchString" value="@currentFilter" placeholder="Search classes..." class="form-control" />
                <input type="hidden" name="sortOrder" value="@currentSort" />
                <button class="btn btn-secondary search-btn" type="submit"><i class="bi bi-search"></i>Search</button>
            </div>
        </form>

        <!-- Back button appears only when a search has been performed -->
        @if (!string.IsNullOrEmpty(currentFilter))
        {
            <a asp-action="Index" class="btn btn-outline-secondary ms-2">
                <i class="bi bi-arrow-left"></i> Back to full list
            </a>
        }
        @if (User.IsInRole("Admin"))
        {
            <a asp-action="Create" class="btn btn-create ms-3">Create New Class</a>
        }
    </div>
</div>

<div class="d-flex align-items-center mb-2 gap-3">
    <div class="fw-semibold text-success">Sort:</div>
    <div>
        <a asp-action="Index" asp-route-sortOrder="@(ViewData["ClassSortParm"])" asp-route-searchString="@currentFilter" class="btn btn-sm btn-outline-secondary">
            <i class="bi bi-arrow-down-up"></i> Class Name
        </a>
    </div>
    <div>
        <a asp-action="Index" asp-route-sortOrder="@(ViewData["StudentsSortParm"])" asp-route-searchString="@currentFilter" class="btn btn-sm btn-outline-secondary">
            <i class="bi bi-arrow-down-up"></i> Students
        </a>
    </div>
</div>

@if (Model.Count > 0)
{
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model[0].ClassName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model[0].Description)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model[0].CurrentStudents)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model[0].Teacher)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.ClassName)</td>
                <td>@Html.DisplayFor(modelItem => item.Description)</td>
                <td>@Html.DisplayFor(modelItem => item.CurrentStudents)</td>
                <td>@Html.DisplayFor(modelItem => item.Teacher.FirstName)</td>
                <td>
                    @if (User.IsInRole("Admin"))
                    {
                        <a asp-action="Edit" asp-route-id="@item.ClassId" class="btn btn-edit btn-sm">Edit</a>
                        <a asp-action="Details" asp-route-id="@item.ClassId" class="btn btn-details btn-sm ms-1">Details</a>
                        <a asp-action="Delete" asp-route-id="@item.ClassId" class="btn btn-delete btn-sm ms-1">Delete</a>
                    }
                    else
                    {
                        <a asp-action="Details" asp-route-id="@item.ClassId" class="btn btn-details btn-sm">Details</a>
                    }
                </td>
            </tr>
        }
        </tbody>
    </table>

    @if (User.IsInRole("Member"))
    {
        <div class="alert alert-success mt-3 shadow-sm" style="border-left: 4px solid #2d7034;">
            <i class="bi bi-info-circle-fill me-2 text-success"></i>
            If you want to register your child for the <strong>Madrasah classes</strong>, please get in touch with an administrator via the
            <a asp-controller="Home" asp-action="About" class="fw-semibold text-success text-decoration-none">About</a> page.
        </div>
    }

    <nav aria-label="Page navigation">
        <ul class="pagination">
            <li class="page-item @(Model.HasPreviousPage ? "" : "disabled")">
                <a class="page-link" asp-action="Index" asp-route-pageNumber="@(Model.PageIndex - 1)" asp-route-sortOrder="@currentSort" asp-route-searchString="@currentFilter">Previous</a>
            </li>
            @for (int i = 1; i <= Model.TotalPages; i++)
            {
                <li class="page-item @(i == Model.PageIndex ? "active" : "")">
                    <a class="page-link" asp-action="Index" asp-route-pageNumber="@i" asp-route-sortOrder="@currentSort" asp-route-searchString="@currentFilter">@i</a>
                </li>
            }
            <li class="page-item @(Model.HasNextPage ? "" : "disabled")">
                <a class="page-link" asp-action="Index" asp-route-pageNumber="@(Model.PageIndex + 1)" asp-route-sortOrder="@currentSort" asp-route-searchString="@currentFilter">Next</a>
            </li>
        </ul>
    </nav>
}
else
{
    if (!String.IsNullOrEmpty(currentFilter))
    {
        <div class="alert alert-warning"><i class="bi bi-search me-2"></i>We couldn’t find anything matching your search. Try using different words or check your spelling.</div>
    }
    else
    {
        <div class="alert alert-light"><i class="bi bi-info-circle me-2"></i>No classes found.</div>
    }
}
