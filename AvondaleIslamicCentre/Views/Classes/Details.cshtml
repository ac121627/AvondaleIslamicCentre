@model AvondaleIslamicCentre.Models.Class

@{
    ViewData["Title"] = "Details";
}

<div class="detail-card animate-up">
    <div class="detail-header">
        <h3>Class Details</h3>
    </div>
    <div class="detail-body">
        <div class="detail-row"><div class="detail-key">Class Name</div><div class="detail-val">@Html.DisplayFor(m => m.ClassName)</div></div>
        <div class="detail-row"><div class="detail-key">Description</div><div class="detail-val">@Html.DisplayFor(m => m.Description)</div></div>
        <div class="detail-row"><div class="detail-key">Current Students</div><div class="detail-val">@Html.DisplayFor(m => m.CurrentStudents)</div></div>
        <div class="detail-row"><div class="detail-key">Teacher</div><div class="detail-val">@Html.DisplayFor(m => m.Teacher.FirstName)</div></div>

        <div class="mt-3 text-end">
            @if (User.IsInRole("Admin"))
            {
                <a asp-action="Edit" asp-route-id="@Model?.ClassId" class="btn btn-edit" data-icon="bi-pencil">Edit</a>
            }
            <a asp-action="Index" class="btn btn-secondary ms-2" data-icon="bi-arrow-left">Back to List</a>
        </div>
    </div>
</div>
