@model AvondaleIslamicCentre.Models.Booking

@{
    ViewData["Title"] = "Delete";
}

<div class="detail-card animate-up">
    <div class="detail-header">
        <h3>Delete Booking</h3>
        <p class="small">Are you sure you want to delete this booking?</p>
    </div>
    <div class="detail-body">
        <div class="detail-row"><div class="detail-key">Booked By</div><div class="detail-val">@Html.DisplayFor(model => model.AICUser.FirstName)</div></div>
        <div class="detail-row"><div class="detail-key">@Html.DisplayNameFor(model => model.StartDateTime)</div><div class="detail-val">@Html.DisplayFor(model => model.StartDateTime)</div></div>
        <div class="detail-row"><div class="detail-key">@Html.DisplayNameFor(model => model.EndDateTime)</div><div class="detail-val">@Html.DisplayFor(model => model.EndDateTime)</div></div>
        <div class="detail-row"><div class="detail-key">@Html.DisplayNameFor(model => model.Hall)</div><div class="detail-val">@Html.DisplayFor(model => model.Hall.Name)</div></div>

        <form asp-action="Delete" class="mt-3 text-end">
            <input type="hidden" asp-for="BookingId" />
            <button type="submit" class="btn btn-delete">Delete</button>
            <a asp-action="Index" class="btn btn-secondary ms-2">Back to List</a>
        </form>
    </div>
</div>
