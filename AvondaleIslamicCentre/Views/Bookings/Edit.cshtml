@model AvondaleIslamicCentre.Models.Booking

@{
    ViewData["Title"] = "Edit Booking";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card shadow-sm border-0">
                <div class="card-header text-white text-center py-3">
                    <h4 class="mb-0 text-white">Edit Booking</h4>
                </div>  
                <div class="card-body p-4">
                    <form asp-action="Edit" method="post">
                        @Html.AntiForgeryToken()
                        <input type="hidden" asp-for="BookingId" />

                        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                        <!-- Start DateTime -->
                        <div class="form-group">
                            <label asp-for="StartDateTime" class="control-label"></label>
                            <input asp-for="StartDateTime" type="datetime-local" class="form-control" />
                            <span asp-validation-for="StartDateTime" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="EndDateTime" class="control-label"></label>
                            <input asp-for="EndDateTime" type="time" class="form-control" />
                            <span asp-validation-for="EndDateTime" class="text-danger"></span>
                        </div>

                        <!-- Hall selection -->
                        <div class="mb-3">
                            <label asp-for="HallId" class="form-label fw-bold"></label>
                            <select asp-for="HallId" class="form-control rounded-pill" asp-items="ViewBag.HallId"></select>
                            <span asp-validation-for="HallId" class="text-danger"></span>
                        </div>

                        <!-- Booked By (readonly) -->
                        <div class="mb-3">
                            <label class="form-label fw-bold">Booked By</label>
                            <input type="text" class="form-control rounded-pill" value="@ViewBag.CurrentUserFirstName" disabled />
                            <input type="hidden" name="AICUserId" value="@ViewBag.CurrentUserId" />
                        </div>

                        <div class="form-group text-center mt-4">
                            <button type="submit" class="btn btn-success rounded-pill px-4 py-2">Save Changes</button>
                            <a asp-action="Index" class="btn btn-outline-secondary rounded-pill px-4 py-2 ms-2">Back to List</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
