@using AvondaleIslamicCentre.Models
@model PaginatedList<Booking>

@{
    ViewData["Title"] = "Index";
    var currentSort = (string)ViewData["CurrentSort"] ?? "";
    var currentFilter = (string)ViewData["CurrentFilter"] ?? "";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <div>
        <h1 class="page-title">Bookings</h1>
        <small class="page-subtitle">Manage hall reservations</small>
    </div>
    <div class="d-flex align-items-center">
        <form method="get" class="search-wrapper mb-0">
            <div class="input-group search-input">
                <input type="text" name="searchString" value="@currentFilter" placeholder="Search by hall or user..." class="form-control" />
                <input type="hidden" name="sortOrder" value="@currentSort" />
                <button class="btn btn-secondary search-btn" type="submit"><i class="bi bi-search"></i>Search</button>
            </div>
        </form>
        <a asp-action="Create" class="btn btn-create ms-3">Make A New Booking</a>
    </div>
</div>

<table class="table">
    <thead>
        <tr>
            <th>
                Booked By
            </th>
            <th>
                <a asp-action="Index" asp-route-sortOrder="@(ViewData["StartSortParm"])" asp-route-searchString="@currentFilter">@Html.DisplayNameFor(model => model[0].StartDateTime)</a>
            </th>
            <th>
                <a asp-action="Index" asp-route-sortOrder="@(ViewData["EndSortParm"])" asp-route-searchString="@currentFilter">@Html.DisplayNameFor(model => model[0].EndDateTime)</a>
            </th>
            <th>
                @Html.DisplayNameFor(model => model[0].Hall)
            </th>
            <th>

            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.AICUser.FirstName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.StartDateTime)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.EndDateTime)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Hall.Name)
                </td>
                
                <td>
                    @if (User.IsInRole("Admin"))
                    {
                        <a asp-action="Edit" asp-route-id="@item.BookingId" class="btn btn-edit btn-sm">Edit</a>
                        <a asp-action="Details" asp-route-id="@item.BookingId" class="btn btn-details btn-sm ms-1">Details</a>
                        <a asp-action="Delete" asp-route-id="@item.BookingId" class="btn btn-delete btn-sm ms-1">Delete</a>
                    }
                    else
                    {
                        <a asp-action="Details" asp-route-id="@item.BookingId" class="btn btn-details btn-sm">Details</a>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>

@if (User.IsInRole("Member"))
{
    <div class="alert alert-info" role="alert">
        Should you need to make any changes to or cancel your booking, kindly contact an administrator.
    </div>
}

<nav aria-label="Page navigation">
    <ul class="pagination">
        <li class="page-item @(Model.HasPreviousPage ? "" : "disabled")">
            <a class="page-link" asp-action="Index" asp-route-pageNumber="@(Model.PageIndex - 1)" asp-route-sortOrder="@currentSort" asp-route-searchString="@currentFilter">Previous</a>
        </li>
        @for (int i = 1; i <= Model.TotalPages; i++)
        {
            <li class="page-item @(i == Model.PageIndex ? "active" : "")">
                <a class="page-link" asp-action="Index" asp-route-pageNumber="@i" asp-route-sortOrder="@currentSort" asp-route-searchString="@currentFilter">@i</a>
            </li>
        }
        <li class="page-item @(Model.HasNextPage ? "" : "disabled")">
            <a class="page-link" asp-action="Index" asp-route-pageNumber="@(Model.PageIndex + 1)" asp-route-sortOrder="@currentSort" asp-route-searchString="@currentFilter">Next</a>
        </li>
    </ul>
</nav>