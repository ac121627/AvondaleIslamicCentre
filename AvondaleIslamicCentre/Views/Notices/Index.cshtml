@model IEnumerable<AvondaleIslamicCentre.Models.Notice>

@{
    ViewData["Title"] = "Index";
}

<h1>Notices</h1>

<p>
    <a asp-action="Create" class="btn btn-create">Make A New Notice</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Message)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PostedAt)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UpdatedAt)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AICUser)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Message)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PostedAt)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UpdatedAt)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AICUser.Id)
            </td>
            <td>
                    <a asp-action="Edit" asp-route-id="@item.NoticeId" class="btn btn-edit btn-sm">Edit</a>
                    <a asp-action="Details" asp-route-id="@item.NoticeId" class="btn btn-details btn-sm ms-1">Details</a>
                    <a asp-action="Delete" asp-route-id="@item.NoticeId" class="btn btn-delete btn-sm ms-1">Delete</a>
                </td>
        </tr>
}
    </tbody>
</table>
