@model AvondaleIslamicCentre.Models.Notice

@{
    ViewData["Title"] = "Delete";
}

<div class="detail-card animate-up">
    <div class="detail-header">
        <h3>Delete Notice</h3>
        <p class="small">Are you sure you want to delete this?</p>
    </div>
    <div class="detail-body">
        <div class="detail-row"><div class="detail-key">Posted By</div><div class="detail-val">@Html.DisplayFor(m => m.AICUser.FirstName)</div></div>
        <div class="detail-row"><div class="detail-key">Title</div><div class="detail-val">@Html.DisplayFor(m => m.Title)</div></div>
        <div class="detail-row"><div class="detail-key">Message</div><div class="detail-val">@Html.DisplayFor(m => m.Message)</div></div>
        <div class="detail-row"><div class="detail-key">Posted At</div><div class="detail-val">@Html.DisplayFor(m => m.PostedAt)</div></div>

        <form asp-action="Delete" class="mt-3 text-end">
            <input type="hidden" asp-for="NoticeId" />
            <button type="submit" class="btn btn-delete" data-icon="bi-trash">Delete</button>
            <a asp-action="Index" class="btn btn-secondary ms-2" data-icon="bi-arrow-left">Back to List</a>
        </form>
    </div>
</div>
