@using AvondaleIslamicCentre.Models
@model PaginatedList<Student>

@{
    // Set the page title
    ViewData["Title"] = "Students";

    var currentSort = (string)ViewData["CurrentSort"] ?? "";
    var currentFilter = (string)ViewData["CurrentFilter"] ?? "";
}

<!-- Header section with title and search bar -->
<div class="d-flex justify-content-between align-items-center mb-3">
    <div>
        <h1 class="page-title">Students</h1>
        <small class="page-subtitle">Enrolled learners and their details</small>
    </div>

    <div class="d-flex align-items-center">
        <!-- Search bar to find students -->
        <form method="get" class="search-wrapper mb-0">
            <div class="input-group search-input">
                <input type="text" name="searchString" value="@currentFilter" placeholder="Search students..." class="form-control" />
                <input type="hidden" name="sortOrder" value="@currentSort" />
                <button class="btn btn-secondary search-btn" type="submit"><i class="bi bi-search"></i>Search</button>
            </div>
        </form>

        <!-- Show "Back to list" button only if a search is active -->
        @if (!string.IsNullOrEmpty(currentFilter))
        {
            <a asp-action="Index" class="btn btn-outline-secondary ms-2">
                <i class="bi bi-arrow-left"></i> Back to full list
            </a>
        }

        <!-- Only admins can see the "Add new student" button -->
        @if (User.IsInRole("Admin"))
        {
            <a asp-action="Create" class="btn btn-create ms-3">Add A New Student</a>
        }
    </div>
</div>

<!-- Sorting buttons -->
<div class="d-flex align-items-center mb-2 gap-3">
    <div class="fw-semibold text-success">Sort:</div>

    <!-- Sort by first name -->
    <div>
        <a asp-action="Index" asp-route-sortOrder="@(ViewData["FirstNameSortParm"])" asp-route-searchString="@currentFilter" class="btn btn-sm btn-outline-secondary">
            <i class="bi bi-arrow-down-up"></i> First Name
        </a>
    </div>

    <!-- Sort by last name -->
    <div>
        <a asp-action="Index" asp-route-sortOrder="@(ViewData["LastNameSortParm"])" asp-route-searchString="@currentFilter" class="btn btn-sm btn-outline-secondary">
            <i class="bi bi-arrow-down-up"></i> Last Name
        </a>
    </div>
</div>

<!-- Display student list if data exists -->
@if (Model.Count > 0)
{
    <table class="table">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(model => model[0].FirstName)</th>
                <th>@Html.DisplayNameFor(model => model[0].LastName)</th>
                <th>@Html.DisplayNameFor(model => model[0].Gender)</th>
                <th>@Html.DisplayNameFor(model => model[0].QuranNazira)</th>
                <th>@Html.DisplayNameFor(model => model[0].QuranHifz)</th>
                <th>@Html.DisplayNameFor(model => model[0].Class)</th>
                <th>@Html.DisplayNameFor(model => model[0].Teacher)</th>
                <th></th>
            </tr>
        </thead>

        <tbody>
            <!-- Loop through each student and display their details -->
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.FirstName)</td>
                    <td>@Html.DisplayFor(modelItem => item.LastName)</td>
                    <td>@Html.DisplayFor(modelItem => item.Gender)</td>
                    <td>@Html.DisplayFor(modelItem => item.QuranNazira)</td>
                    <td>@Html.DisplayFor(modelItem => item.QuranHifz)</td>
                    <td>@Html.DisplayFor(modelItem => item.Class.ClassName)</td>
                    <td>@Html.DisplayFor(modelItem => item.Teacher.FirstName)</td>

                    <td>
                        <!-- Admin users can edit and delete students -->
                        @if (User.IsInRole("Admin"))
                        {
                            <a asp-action="Edit" asp-route-id="@item.StudentId" class="btn btn-edit btn-sm">Edit</a>
                            <a asp-action="Details" asp-route-id="@item.StudentId" class="btn btn-details btn-sm ms-1">Details</a>
                            <a asp-action="Delete" asp-route-id="@item.StudentId" class="btn btn-delete btn-sm ms-1">Delete</a>
                        }
                        else
                        {
                            <!-- Non-admins can only view details -->
                            <a asp-action="Details" asp-route-id="@item.StudentId" class="btn btn-details btn-sm">Details</a>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <!-- Pagination section -->
    <nav aria-label="Page navigation">
        <ul class="pagination">
            <!-- Previous page button -->
            <li class="page-item @(Model.HasPreviousPage ? "" : "disabled")">
                <a class="page-link" asp-action="Index" asp-route-pageNumber="@(Model.PageIndex - 1)"
                   asp-route-sortOrder="@currentSort" asp-route-searchString="@currentFilter">Previous</a>
            </li>

            <!-- Page number links -->
            @for (int i = 1; i <= Model.TotalPages; i++)
            {
                <li class="page-item @(i == Model.PageIndex ? "active" : "")">
                    <a class="page-link" asp-action="Index" asp-route-pageNumber="@i"
                       asp-route-sortOrder="@currentSort" asp-route-searchString="@currentFilter">@i</a>
                </li>
            }

            <!-- Next page button -->
            <li class="page-item @(Model.HasNextPage ? "" : "disabled")">
                <a class="page-link" asp-action="Index" asp-route-pageNumber="@(Model.PageIndex + 1)"
                   asp-route-sortOrder="@currentSort" asp-route-searchString="@currentFilter">Next</a>
            </li>
        </ul>
    </nav>
}
else
{
    <!-- Show helpful messages if no students are found -->
    if (!String.IsNullOrEmpty(currentFilter))
    {
        <div class="alert alert-warning">
            <i class="bi bi-search me-2"></i>
            We couldn’t find anything matching your search. Try using different words or check your spelling.
        </div>
    }
    else
    {
        <div class="alert alert-light">
            <i class="bi bi-info-circle me-2"></i>
            No students found.
        </div>
    }
}
