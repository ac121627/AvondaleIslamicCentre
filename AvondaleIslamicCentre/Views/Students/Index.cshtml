@using AvondaleIslamicCentre.Models
@model PaginatedList<Student>

@{
    ViewData["Title"] = "Index";
    var currentSort = (string)ViewData["CurrentSort"] ?? "";
    var currentFilter = (string)ViewData["CurrentFilter"] ?? "";
}

<h1>Students</h1>

<p>
    <a asp-action="Create" class="btn btn-create">Add A New Student</a>
</p>

<form method="get" class="mb-3">
    <input type="text" name="searchString" value="@currentFilter" placeholder="Search by student name..." class="form-control d-inline-block w-auto me-2" />
    <input type="hidden" name="sortOrder" value="@currentSort" />
    <button type="submit" class="btn btn-secondary">Search</button>
</form>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model[0].GuardianFirstName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model[0].GuardianLastName)
            </th>
            <th>
                <a asp-action="Index" asp-route-sortOrder="@(ViewData["FirstNameSortParm"])" asp-route-searchString="@currentFilter">@Html.DisplayNameFor(model => model[0].FirstName)</a>
            </th>
            <th>
                <a asp-action="Index" asp-route-sortOrder="@(ViewData["LastNameSortParm"])" asp-route-searchString="@currentFilter">@Html.DisplayNameFor(model => model[0].LastName)</a>
            </th>
            <th>
                @Html.DisplayNameFor(model => model[0].Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model[0].PhoneNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model[0].Gender)
            </th>
            <th>
                @Html.DisplayNameFor(model => model[0].Ethnicity)
            </th>
            <th>
                @Html.DisplayNameFor(model => model[0].QuranNazira)
            </th>
            <th>
                @Html.DisplayNameFor(model => model[0].QuranHifz)
            </th>
            <th>
                @Html.DisplayNameFor(model => model[0].DateOfBirth)
            </th>
            <th>
                @Html.DisplayNameFor(model => model[0].Address)
            </th>
            <th>
                @Html.DisplayNameFor(model => model[0].Class)
            </th>
            <th>
                @Html.DisplayNameFor(model => model[0].Teacher)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.GuardianFirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.GuardianLastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PhoneNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Gender)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Ethnicity)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.QuranNazira)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.QuranHifz)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DateOfBirth)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Address)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Class.ClassName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Teacher.Email)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.StudentId" class="btn btn-edit btn-sm">Edit</a>
                <a asp-action="Details" asp-route-id="@item.StudentId" class="btn btn-details btn-sm ms-1">Details</a>
                <a asp-action="Delete" asp-route-id="@item.StudentId" class="btn btn-delete btn-sm ms-1">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>

<nav aria-label="Page navigation">
    <ul class="pagination">
        <li class="page-item @(Model.HasPreviousPage ? "" : "disabled")">
            <a class="page-link" asp-action="Index" asp-route-pageNumber="@(Model.PageIndex - 1)" asp-route-sortOrder="@currentSort" asp-route-searchString="@currentFilter">Previous</a>
        </li>
        @for (int i = 1; i <= Model.TotalPages; i++)
        {
            <li class="page-item @(i == Model.PageIndex ? "active" : "")">
                <a class="page-link" asp-action="Index" asp-route-pageNumber="@i" asp-route-sortOrder="@currentSort" asp-route-searchString="@currentFilter">@i</a>
            </li>
        }
        <li class="page-item @(Model.HasNextPage ? "" : "disabled")">
            <a class="page-link" asp-action="Index" asp-route-pageNumber="@(Model.PageIndex + 1)" asp-route-sortOrder="@currentSort" asp-route-searchString="@currentFilter">Next</a>
        </li>
    </ul>
</nav>
