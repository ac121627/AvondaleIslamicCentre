@model AvondaleIslamicCentre.Models.Student

@{
    ViewData["Title"] = "Edit Student";

    // Server-side DOB validation range (students must be between 5 and 20 years old)
    var maxDate = DateTime.Today.AddYears(-5).ToString("yyyy-MM-dd");
    var minDate = DateTime.Today.AddYears(-20).ToString("yyyy-MM-dd");
}

<div class="container mt-4 animate-up">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card shadow-sm border-0">
                <div class="card-header text-white text-center py-3">
                    <h4 class="mb-0 text-white">Edit Student</h4>
                </div>
                <div class="card-body p-4">
                    <form asp-action="Edit">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                        <input type="hidden" asp-for="StudentId" />

                        <div class="mb-3">
                            <label asp-for="GuardianFirstName" class="form-label fw-bold"></label>
                            <input asp-for="GuardianFirstName" class="form-control rounded-pill" />
                            <span asp-validation-for="GuardianFirstName" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="GuardianLastName" class="form-label fw-bold"></label>
                            <input asp-for="GuardianLastName" class="form-control rounded-pill" />
                            <span asp-validation-for="GuardianLastName" class="text-danger"></span>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="FirstName" class="form-label fw-bold"></label>
                                <input asp-for="FirstName" class="form-control rounded-pill" />
                                <span asp-validation-for="FirstName" class="text-danger"></span>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="LastName" class="form-label fw-bold"></label>
                                <input asp-for="LastName" class="form-control rounded-pill" />
                                <span asp-validation-for="LastName" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Email" class="form-label fw-bold"></label>
                            <input asp-for="Email" class="form-control rounded-pill" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="PhoneNumber" class="form-label fw-bold"></label>
                            <input asp-for="PhoneNumber" class="form-control rounded-pill" />
                            <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="Gender" class="form-label fw-bold"></label>
                                <select asp-for="Gender" class="form-control rounded-pill" asp-items="Html.GetEnumSelectList<Gender>()"></select>
                                <span asp-validation-for="Gender" class="text-danger"></span>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="Ethnicity" class="form-label fw-bold"></label>
                                <select asp-for="Ethnicity" class="form-control rounded-pill" asp-items="Html.GetEnumSelectList<Ethnicity>()"></select>
                                <span asp-validation-for="Ethnicity" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="QuranNazira" class="form-label fw-bold"></label>
                                <select asp-for="QuranNazira" class="form-control rounded-pill" asp-items="Html.GetEnumSelectList<QuranLevel>()"></select>
                                <span asp-validation-for="QuranNazira" class="text-danger"></span>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="QuranHifz" class="form-label fw-bold"></label>
                                <select asp-for="QuranHifz" class="form-control rounded-pill" asp-items="Html.GetEnumSelectList<QuranLevel>()"></select>
                                <span asp-validation-for="QuranHifz" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label asp-for="DateOfBirth" class="form-label fw-bold"></label>
                            <input asp-for="DateOfBirth" type="date" class="form-control rounded-pill"
                                   min="@minDate" max="@maxDate"
                                   oninvalid="this.setCustomValidity('Date of birth must make the student between 5 and 20 years old.')"
                                   oninput="this.setCustomValidity('')" />
                            <span asp-validation-for="DateOfBirth" class="text-danger"></span>
                            <small class="form-text text-muted">Must be between 5 and 20 years old</small>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Address" class="form-label fw-bold"></label>
                            <input asp-for="Address" class="form-control rounded-pill" />
                            <span asp-validation-for="Address" class="text-danger"></span>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="ClassId" class="form-label fw-bold"></label>
                                <select asp-for="ClassId" class="form-control rounded-pill" asp-items="ViewBag.ClassId"></select>
                                <span asp-validation-for="ClassId" class="text-danger"></span>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="TeacherId" class="form-label fw-bold"></label>
                                <select asp-for="TeacherId" class="form-control rounded-pill" asp-items="ViewBag.TeacherId"></select>
                                <span asp-validation-for="TeacherId" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="form-group mt-4 text-center">
                            <button type="submit" class="btn btn-primary rounded-pill px-4 py-2">Save Changes</button>
                            <a asp-action="Index" class="btn btn-outline-secondary rounded-pill px-4 py-2 ms-2">Back to List</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
