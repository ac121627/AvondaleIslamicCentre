@model AvondaleIslamicCentre.Models.Student

@{
    ViewData["Title"] = "Delete";
}

<div class="detail-card animate-up">
    <div class="detail-header">
        <h3>Delete Student</h3>
        <p class="small">Are you sure you want to delete this?</p>
    </div>
    <div class="detail-body">
        <div class="detail-row"><div class="detail-key">Guardian</div><div class="detail-val">@Html.DisplayFor(m => m.GuardianFirstName) @Html.DisplayFor(m => m.GuardianLastName)</div></div>
        <div class="detail-row"><div class="detail-key">Student</div><div class="detail-val">@Html.DisplayFor(m => m.FirstName) @Html.DisplayFor(m => m.LastName)</div></div>
        <div class="detail-row"><div class="detail-key">Email</div><div class="detail-val">@Html.DisplayFor(m => m.Email)</div></div>
        <div class="detail-row"><div class="detail-key">Phone</div><div class="detail-val">@Html.DisplayFor(m => m.PhoneNumber)</div></div>
        <div class="detail-row"><div class="detail-key">Class</div><div class="detail-val">@Html.DisplayFor(m => m.Class.ClassName)</div></div>
        <div class="detail-row"><div class="detail-key">Teacher</div><div class="detail-val">@Html.DisplayFor(m => m.Teacher.FirstName)</div></div>

        <form asp-action="Delete" class="mt-3 text-end">
            <input type="hidden" asp-for="StudentId" />
            <button type="submit" class="btn btn-delete" data-icon="bi-trash">Delete</button>
            <a asp-action="Index" class="btn btn-secondary ms-2" data-icon="bi-arrow-left">Back to List</a>
        </form>
    </div>
</div>
