@page
@model LoginModel

@{
    // Sets the page title
    ViewData["Title"] = "Log in";
}

<!-- Main container for login page -->
<div class="auth-card">
    <!-- Left side: welcome message for returning users -->
    <div class="auth-left">
        <h2>Welcome back</h2>
        <p>Sign in to manage your bookings, donations and students.</p>

        <!-- Link for new users to go to the registration page -->
        <div>
            <p class="small-muted">New here?</p>
            <a asp-page="/Account/Register" class="btn btn-outline-light">Create account</a>
        </div>
    </div>

    <!-- Right side: login form -->
    <div class="auth-right">
        <h3 class="mb-3">Sign in to your account</h3>

        <!-- Login form begins -->
        <form id="account" method="post">
            <!-- Displays general validation errors -->
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>

            <!-- Email input -->
            <div class="form-floating mb-3">
                <input asp-for="Input.Email" class="form-control" autocomplete="username" placeholder="name@example.com" />
                <label asp-for="Input.Email">Email</label>
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>

            <!-- Password input -->
            <div class="form-floating mb-3">
                <input asp-for="Input.Password" class="form-control" autocomplete="current-password" placeholder="Password" />
                <label asp-for="Input.Password">Password</label>
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>

            <!-- Remember me checkbox and forgot password link -->
            <div class="d-flex justify-content-between align-items-center mb-3">
                <div class="form-check">
                    <input class="form-check-input border-success" asp-for="Input.RememberMe" />
                    <label class="form-check-label" asp-for="Input.RememberMe">Remember me</label>
                </div>
                <a asp-page="./ForgotPassword" class="btn-link-green">Forgot password?</a>
            </div>

            <!-- Submit button for login -->
            <button id="login-submit" type="submit" class="w-100 btn btn-success py-2 fw-semibold shadow-sm hover-bright mb-3">Sign in</button>

            <hr />

            <!-- Register link below login button -->
            <div class="text-center mt-4 d-flex justify-content-center align-items-center gap-3 flex-nowrap">
                <a asp-page="./Register" class="btn-outline-green btn-sm px-3">Register New Account</a>
            </div>
        </form>

        <!-- Inline CSS styling for buttons and layout -->
        <style>
            /* Small green outline button style */
            .btn-outline-green.btn-sm {
                padding: 6px 14px;
                font-size: 0.85rem;
                border-radius: 15px;
                white-space: nowrap;
            }

            /* Adjust spacing between elements */
            .d-flex.gap-3 {
                gap: 10px !important;
            }

            /* Center the register section */
            .text-center.mt-4 {
                display: flex;
                justify-content: center;
                align-items: center;
                flex-wrap: nowrap;
            }

            /* Smaller green outline button styling */
            .btn-outline-green.btn-sm {
                padding: 5px 12px;
                font-size: 0.9rem;
                border-radius: 15px;
            }

            /* Margin adjustments for anchor tags */
            .d-flex.gap-2 a {
                margin: 0 4px;
            }

            /* General style for green outline buttons */
            .btn-outline-green {
                border: 2px solid #2d7034;
                color: #2d7034;
                padding: 8px 18px;
                border-radius: 20px;
                text-decoration: none;
                font-weight: 500;
                transition: all 0.3s ease;
            }

                /* Hover effect for green outline buttons */
                .btn-outline-green:hover {
                    background-color: #2d7034;
                    color: #fff;
                }

            /* Green link styling */
            .btn-link-green {
                color: #2d7034;
                text-decoration: none;
                font-weight: 500;
                transition: 0.3s;
            }

                /* Hover effect for green links */
                .btn-link-green:hover {
                    color: #225b2b;
                    text-decoration: underline;
                }

            /* Hover brightness for buttons */
            .hover-bright:hover {
                filter: brightness(1.1);
            }

            /* Smooth transition for hover effects */
            .transition {
                transition: all 0.3s ease;
            }

            /* Muted small text color on the left panel */
            .small-muted {
                font-size: 0.9rem;
                color: rgba(255, 255, 255, 0.8);
            }
        </style>
    </div>
</div>

<!-- Adds client-side validation script support -->
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
